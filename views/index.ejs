<%- include('partials/head', {
  title: 'MatchPoint',
  bodyClass: 'landing-page',
  extraHead: `
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;500;600;700&family=Bebas+Neue&display=swap" rel="stylesheet">
  `
}) %>
<%- include('partials/navbar', { user, activePage: '' }) %>
    <section class="landing-hero">
      <div class="landing-hero__layout">
        <div class="landing-hero__content">
          <div class="landing-tag">MatchPoint</div>
          <h1 class="landing-title">Own your next session</h1>
          <p class="landing-subtitle">Book certified coaches, build your schedule, and stay locked in on your training goals.</p>
          <% if (!user) { %>
            <div class="landing-actions">
              <a class="landing-btn landing-btn--primary" href="/register">Create account</a>
              <a class="landing-btn landing-btn--ghost" href="/login">Log in</a>
            </div>
          <% } else { %>
            <% if (user.role === 'admin') { %>
              <div class="landing-actions">
                <a class="landing-btn landing-btn--primary" href="/listingsManage">Manage Listings</a>
                <a class="landing-btn landing-btn--ghost" href="/accounts">Manage Users</a>
                <a class="landing-btn landing-btn--ghost" href="/bookingsManage">Manage Bookings</a>
              </div>
            <% } else if (user.role === 'coach') { %>
              <div class="landing-actions">
                <a class="landing-btn landing-btn--primary" href="/listingsManage">Manage My Listings</a>
                <a class="landing-btn landing-btn--ghost" href="/bookingsManage">View My Bookings</a>
              </div>
            <% } else { %>
              <div class="landing-actions">
                <a class="landing-btn landing-btn--primary" href="/listingsBrowse">Find a Coach</a>
              </div>
            <% } %>
          <% } %>
          <div class="landing-stats">
            <div class="landing-stat">
              <strong>Sport-first training</strong>
              <span>Sessions that scale</span>
            </div>
            <div class="landing-stat">
              <strong>Coach matching</strong>
              <span>Skill-level alignment</span>
            </div>
          </div>
        </div>
        <div class="landing-hero__visual">
          <div class="landing-highlight">
            <strong>Next session</strong>
            <p>Set the pace with a coach who matches your goals.</p>
          </div>
          <div class="landing-photo">
            <img src="https://img.freepik.com/free-photo/side-view-football-trainer-helping-kids_23-2149742054.jpg?semt=ais_hybrid&w=740&q=80" alt="Football coach training kids">
          </div>
        </div>
      </div>
    </section>
<%- include('partials/footer') %>