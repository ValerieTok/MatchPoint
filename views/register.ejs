<%- include('partials/head', {
  title: 'Create account',
  bodyClass: 'entry-page admin-page entry-login',
  extraHead: `
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  `
}) %>
<section class="entry-shell">
  <div class="entry-topbar">
    <a class="entry-brand" href="/">
      <span class="entry-brand__dot entry-brand__dot--img">
        <img src="/images/soccer.png.png" alt="Soccer ball">
      </span>
      <span class="entry-brand__name">MatchPoint</span>
    </a>
    <div class="entry-topbar__actions">
      <a class="entry-nav" href="/login">Login</a>
      <a class="entry-nav entry-nav--active" href="/register">Sign up</a>
    </div>
  </div>
  <div class="entry-layout">
    <div class="entry-card">
      <div class="entry-eyebrow">MatchPoint</div>
      <h1 class="entry-title">Create account</h1>
      <p class="entry-subtitle">Join the training floor and book sessions with coaches that fit your game.</p>
      <div class="entry-chips">
        <span class="entry-chip"><i class="fa-solid fa-dumbbell"></i> Athlete ready</span>
        <span class="entry-chip"><i class="fa-solid fa-user-check"></i> Coach verified</span>
        <span class="entry-chip"><i class="fa-solid fa-stopwatch"></i> Smart scheduling</span>
      </div>

      <%- include('partials/flashMessages', { messages }) %>

      <form action="/register" method="post" enctype="multipart/form-data" class="entry-form">
        <div class="entry-form__row">
          <div>
            <label class="form-label" for="register-name">Full name</label>
            <div class="input-icon">
              <i class="fa-solid fa-user"></i>
              <input id="register-name" class="form-control" type="text" name="username" value="<%= (formData && formData.username) || '' %>" required>
            </div>
          </div>
          <div>
            <label class="form-label" for="register-email">Email</label>
            <div class="input-icon">
              <i class="fa-solid fa-envelope"></i>
              <input id="register-email" class="form-control" type="email" name="email" value="<%= (formData && formData.email) || '' %>" required autocomplete="email">
            </div>
          </div>
        </div>
        <div class="entry-form__row">
          <div>
            <label class="form-label" for="register-password">Password</label>
            <div class="input-icon">
              <i class="fa-solid fa-lock"></i>
              <input id="register-password" class="form-control register-password-input" type="password" name="password" minlength="8" required autocomplete="new-password">
            </div>
          </div>
          <div>
            <label class="form-label" for="register-phone">Phone number</label>
            <div class="input-icon">
              <i class="fa-solid fa-phone"></i>
              <input id="register-phone" class="form-control" type="tel" name="contact" value="<%= (formData && formData.contact) || '' %>">
            </div>
          </div>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="show-password-register" data-show-password-target=".register-password-input">
          <label class="form-check-label" for="show-password-register">Show password</label>
        </div>
        <div>
          <label class="form-label">Profile photo (optional)</label>
          <input class="form-control" type="file" name="profile_photo" accept=".jpg,.jpeg,.png,.webp,.gif">
        </div>
        <div>
          <label class="form-label">Account type</label>
          <select class="form-select" name="role">
            <option value="user" <%= (formData && formData.role) === 'user' ? 'selected' : '' %>>Athlete</option>
            <option value="coach" <%= (formData && formData.role) === 'coach' ? 'selected' : '' %>>Coach</option>
            <option value="admin" <%= (formData && formData.role) === 'admin' ? 'selected' : '' %>>Admin</option>
          </select>
        </div>
        <div class="cert-section" aria-hidden="true">
          <div class="cert-section__inner">
            <div class="cert-fields">
              <label class="form-label">Certification title</label>
              <input class="form-control" type="text" name="cert_title" value="<%= (formData && formData.cert_title) || '' %>">
            </div>
            <div class="cert-fields">
              <label class="form-label">Upload certification photo (JPG/PNG/WEBP/GIF)</label>
              <input class="form-control" type="file" name="cert_file" accept=".jpg,.jpeg,.png,.webp,.gif">
            </div>
          </div>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="tnc" name="tnc">
          <label class="form-check-label" for="tnc">I agree to the <a href="/terms" target="_blank" rel="noopener">Terms and Conditions</a></label>
        </div>
        <button class="entry-btn w-100" type="submit">Create account</button>
        <div class="entry-footer">
          Already have an account? <a class="entry-link" href="/login">Log in</a>
        </div>
      </form>
    </div>

  </div>
</section>
<%- include('partials/showPasswordToggle') %>
<script>
  (function () {
    const roleSelect = document.querySelector('select[name="role"]');
    const certSection = document.querySelector('.cert-section');
    const certFields = document.querySelectorAll('.cert-fields input');
    if (!roleSelect || !certSection) return;
    const updateVisibility = () => {
      const isCoach = roleSelect.value === 'coach';
      certSection.classList.toggle('cert-section--open', isCoach);
      certSection.setAttribute('aria-hidden', isCoach ? 'false' : 'true');
      certFields.forEach((input) => {
        input.required = isCoach;
      });
    };
    roleSelect.addEventListener('change', updateVisibility);
    updateVisibility();
  })();
</script>
<script>
  (function () {
    const form = document.querySelector('form[action="/register"]');
    if (!form) return;
    form.addEventListener('submit', function (e) {
      const tnc = form.querySelector('input[name="tnc"]');
      if (tnc && !tnc.checked) {
        e.preventDefault();
        alert('Please accept the Terms and Conditions to continue.');
        tnc.focus();
        return false;
      }
    });
  })();
</script>
<%- include('partials/footer') %>
