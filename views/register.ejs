<%- include('partials/head', {
  title: 'Create account',
  bodyClass: 'entry-page admin-page',
  extraHead: `
    <link rel="stylesheet" href="/css/user-common.css">
    <link rel="stylesheet" href="/css/admin-common.css">
    <link rel="stylesheet" href="/css/auth.css">
  `
}) %>
<%- include('partials/navbar', { user, activePage: '' }) %>
<section class="entry-shell">
  <div class="entry-layout">
    <div class="entry-card">
      <div class="entry-eyebrow">MatchPoint</div>
      <h1 class="entry-title">Create account</h1>
      <p class="entry-subtitle">Join the training floor and book sessions with coaches that fit your game.</p>

      <%- include('partials/flashMessages', { messages }) %>

      <form action="/register" method="post" enctype="multipart/form-data" class="entry-form d-grid gap-3">
        <div>
          <label class="form-label">Full name</label>
          <input class="form-control" type="text" name="username" value="<%= (formData && formData.username) || '' %>" required>
        </div>
        <div>
          <label class="form-label">Email</label>
          <input class="form-control" type="email" name="email" value="<%= (formData && formData.email) || '' %>" required>
        </div>
        <div>
          <label class="form-label">Password</label>
          <input class="form-control register-password-input" type="password" name="password" minlength="8" required>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="show-password-register" data-show-password-target=".register-password-input">
          <label class="form-check-label" for="show-password-register">Show password</label>
        </div>
        <div>
          <label class="form-label">Phone number</label>
          <input class="form-control" type="tel" name="contact" value="<%= (formData && formData.contact) || '' %>">
        </div>
        <div>
          <label class="form-label">Profile photo (optional)</label>
          <input class="form-control" type="file" name="profile_photo" accept=".jpg,.jpeg,.png,.webp,.gif">
        </div>
        <div>
          <label class="form-label">Account type</label>
          <select class="form-select" name="role">
            <option value="user" <%= (formData && formData.role) === 'user' ? 'selected' : '' %>>Athlete</option>
            <option value="coach" <%= (formData && formData.role) === 'coach' ? 'selected' : '' %>>Coach</option>
          </select>
        </div>
        <div class="cert-fields d-none">
          <label class="form-label">Certification title</label>
          <input class="form-control" type="text" name="cert_title" value="<%= (formData && formData.cert_title) || '' %>">
          <small class="text-muted">Required for coach accounts.</small>
        </div>
        <div class="cert-fields d-none">
          <label class="form-label">Upload certification photo (JPG/PNG/WEBP/GIF)</label>
          <input class="form-control" type="file" name="cert_file" accept=".jpg,.jpeg,.png,.webp,.gif">
        </div>
        <button class="entry-btn w-100" type="submit">Create account</button>
        <div class="entry-footer">
          Already have an account? <a class="entry-link" href="/login">Log in</a>
        </div>
      </form>
    </div>

    <div class="entry-hero">
      <div>
        <h3>Built for athletes.</h3>
        <p>Pick your sport, choose your coach, and keep every session organized.</p>
      </div>
      <div class="entry-hero__stats">
        <div class="entry-stat">
          <strong>Flexible scheduling</strong>
          <span>Any time, any place</span>
        </div>
        <div class="entry-stat">
          <strong>Coach ratings</strong>
          <span>Train with the best</span>
        </div>
        <div class="entry-stat">
          <strong>Performance focus</strong>
          <span>Skill-based sessions</span>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('partials/showPasswordToggle') %>
<script>
  (function () {
    const roleSelect = document.querySelector('select[name="role"]');
    const certFields = document.querySelectorAll('.cert-fields');
    if (!roleSelect || !certFields.length) return;
    const updateVisibility = () => {
      const isCoach = roleSelect.value === 'coach';
      certFields.forEach((el) => {
        el.classList.toggle('d-none', !isCoach);
        const input = el.querySelector('input');
        if (input) {
          input.required = isCoach && input.type !== 'file';
        }
      });
    };
    roleSelect.addEventListener('change', updateVisibility);
    updateVisibility();
  })();
</script>
<%- include('partials/footer') %>