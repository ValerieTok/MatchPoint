<%- include('partials/head', {
  title: 'Listings | Dashboard',
  extraHead: `<style>
    body { background: #f7f7f9; }
    .welcome-card {
      background: linear-gradient(135deg, #f9fafb, #eef2ff);
      border: 1px solid #e5e7eb;
      border-radius: 18px;
    }
    .product-card {
      border: 1px solid #e5e7eb;
      border-radius: 14px;
      box-shadow: 0 4px 18px rgba(0, 0, 0, 0.04);
      transition: transform 0.1s ease, box-shadow 0.1s ease;
    }
    .product-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }
    .product-img {
      height: 180px;
      object-fit: contain;
      padding: 12px;
    }
  </style>`
}) %>
<%- include('partials/navbar', { user, activePage: 'listingsManage' }) %>

  <div class="container py-4">
    <div class="welcome-card p-4 mb-4">
      <div class="d-flex flex-wrap justify-content-between align-items-center">
        <div>
          <p class="mb-1 text-muted"><%= user.role === 'coach' ? 'Coach dashboard' : 'Admin dashboard' %></p>
          <h3 class="mb-1">Hi, <%= user.username %>!</h3>
          <small class="text-muted"><%= user.role === 'coach' ? 'Manage your coaching listings and sessions.' : 'Manage listings, users, and bookings across the platform.' %></small>
        </div>
        <div class="d-flex flex-wrap gap-2 mt-3 mt-sm-0">
          <span class="badge bg-secondary align-self-center">Total listings: <%= products ? products.length : 0 %></span>
        </div>
      </div>
    </div>

    <%- include('partials/flashMessages', { messages }) %>

    <% if (!products || !products.length) { %>
      <div class="alert alert-info">No listings found. Add your first listing.</div>
    <% } else { %>
      <div class="row g-3">
        <% products.forEach(p => {
        %>
          <div class="col-12 col-sm-6 col-md-4">
            <div class="product-card h-100 d-flex flex-column bg-white">
              <img src="/images/<%= p.image || 'placeholder.png' %>" class="card-img-top product-img" alt="<%= p.listing_title %>">
              <div class="card-body d-flex flex-column">
                <h6 class="fw-semibold mb-1"><%= p.listing_title %></h6>
                <div class="small text-muted mb-1"><%= p.username %></div>
                <% if (p.description) { %>
                  <p class="small text-muted mb-2"><%= p.description %></p>
                <% } %>
                <p class="small mb-2">
                  <% if (p.skill_level) { %>
                    <span class="badge bg-secondary text-uppercase"><%= p.skill_level %></span>
                  <% } %>
                  <% if (p.duration_minutes) { %>
                    <span class="text-muted"> - <%= p.duration_minutes %> mins</span>
                  <% } %>
                </p>
                <% if (p.session_location) { %>
                  <div class="small text-muted mb-2">Location: <%= p.session_location %></div>
                <% } %>
                <% if (typeof p.is_active !== 'undefined') { %>
                  <div class="small <%= p.is_active ? 'text-success' : 'text-muted' %> mb-2">
                    <%= p.is_active ? 'Active listing' : 'Hidden listing' %>
                  </div>
                <% } %>
                <div class="mt-auto d-flex gap-2">
                  <a class="btn btn-success btn-sm" href="/updateListing/<%= p.id %>">Edit</a>
                  <form method="post" action="/listingsManage/delete/<%= p.id %>" onsubmit="return confirm('Delete this listing?')" class="d-inline">
                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
<%- include('partials/footer') %>

