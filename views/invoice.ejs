<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Invoice</title>
  <style>
    body {
      background: linear-gradient(180deg, #ffffff 0%, #eef2ff 70%);
      min-height: 100vh;
    }
    .invoice-badge {
      background: #ecf1ff;
      border-radius: 16px;
      padding: 0.75rem 1.25rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #1c1f35;
      font-weight: 600;
    }
    .invoice-card {
      border-radius: 26px;
      background: #fff;
      padding: 2rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 20px 40px rgba(15,23,42,0.12);
    }
    .invoice-table {
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(17,24,39,0.08);
      box-shadow: 0 15px 30px rgba(15,23,42,0.1);
    }
    .invoice-table th, .invoice-table td {
      border: none;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user, activePage: 'cart' }) %>

  <div class="container py-5">
    <div class="invoice-card text-center">
      <div class="invoice-badge mx-auto mb-2">
        <span class="text-primary">Invoice</span>
      </div>
      <h1 class="fw-bold mb-1">Purchase confirmed</h1>
      <p class="text-muted mb-1">Thank you for your order.</p>
      <p class="text-muted small">
        Delivery location: <strong><%= deliveryAddress %></strong>
      </p>
      <% if (orderId) { %>
        <span class="badge bg-success text-white px-3 py-2">Order #<%= orderId %></span>
      <% } %>
    </div>

    <div class="invoice-card invoice-table">
      <div class="table-responsive">
        <table class="table mb-0">
          <thead class="bg-light">
            <tr class="text-uppercase small text-muted">
              <th>Item</th>
              <th class="text-center">Image</th>
              <th class="text-end">Qty</th>
              <th class="text-end">Price</th>
              <th class="text-end">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% cart.forEach(it => {
              const price = Number(it.price || 0);
              const qty = Number(it.quantity || 0);
              const listPrice = Number(it.listPrice || price);
              const discountPercentage = Number(it.discountPercentage || 0);
              const hasDiscount = discountPercentage > 0 && listPrice > price;
              const subtotal = price * qty;
              const imageSrc = it.image ? '/images/' + it.image : null;
              const original = Number(it.originalPrice || listPrice || price);
            %>
              <tr>
                <td>
                  <div class="fw-semibold text-dark"><%= it.productName %></div>
                  <% if (it.offerMessage) { %>
                    <small class="text-info"><%= it.offerMessage %></small>
                  <% } %>
                </td>
                <td class="text-center">
                  <% if (imageSrc) { %>
                    <img src="<%= imageSrc %>" alt="<%= it.productName %>" class="img-fluid" style="max-height:60px;">
                  <% } else { %>
                    <span class="text-muted small">No image</span>
                  <% } %>
                </td>
                <td class="text-end"><%= qty %></td>
                <td class="text-end">
                  <% if (original > price) { %>
                    <div class="text-decoration-line-through text-muted small">$<%= original.toFixed(2) %></div>
                    <div class="text-success small">-<%= ((1 - price / original) * 100).toFixed(0) %>% off</div>
                  <% } else if (hasDiscount) { %>
                    <div class="text-decoration-line-through text-muted small">$<%= listPrice.toFixed(2) %></div>
                  <% } %>
                  <div class="fw-semibold">$<%= price.toFixed(2) %></div>
                </td>
                <td class="text-end fw-semibold">$<%= subtotal.toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="invoice-card d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
      <div>
        <p class="text-muted mb-1">Total savings</p>
        <% const totalSavings = cart.reduce((sum, item) => {
          const original = Number(item.originalPrice || item.listPrice || item.price || 0);
          const discount = original - Number(item.price || 0);
          return sum + (discount > 0 ? discount * Number(item.quantity || 0) : 0);
        }, 0);
        %>
        <h3 class="fw-semibold text-success">$<%= totalSavings.toFixed(2) %></h3>
      </div>
      <div class="text-end">
        <p class="text-muted mb-1">Total paid</p>
        <h2 class="fw-bold">$<%= Number(total || 0).toFixed(2) %></h2>
      </div>
      <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="/shopping">Continue shopping</a>
        <button class="btn btn-success" type="button" onclick="window.print()">Print invoice</button>
      </div>
    </div>
  </div>
</body>
</html>
