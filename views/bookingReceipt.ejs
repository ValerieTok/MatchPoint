<%- include('partials/head', {
  title: 'Booking Receipt',
  extraHead: `<style>
    body {
      background: linear-gradient(180deg, #ffffff 0%, #eef2ff 70%);
      min-height: 100vh;
    }
    .invoice-badge {
      background: #ecf1ff;
      border-radius: 16px;
      padding: 0.75rem 1.25rem;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #1c1f35;
      font-weight: 600;
    }
    .invoice-card {
      border-radius: 26px;
      background: #fff;
      padding: 2rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 20px 40px rgba(15,23,42,0.12);
    }
    .invoice-table {
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(17,24,39,0.08);
      box-shadow: 0 15px 30px rgba(15,23,42,0.1);
    }
    .invoice-table th, .invoice-table td {
      border: none;
    }
  </style>`
}) %>
<%- include('partials/navbar', { user, activePage: 'cart' }) %>

  <div class="container py-5">
    <div class="invoice-card text-center">
      <div class="invoice-badge mx-auto mb-2">
        <span class="text-primary">Booking receipt</span>
      </div>
      <h1 class="fw-bold mb-1">Booking confirmed</h1>
      <p class="text-muted mb-1">Thank you for booking a coaching session.</p>
      <p class="text-muted small">
        Session location: <strong><%= deliveryAddress %></strong>
      </p>
      <% if (orderId) { %>
        <span class="badge bg-success text-white px-3 py-2">Booking #<%= orderId %></span>
      <% } %>
    </div>

    <div class="invoice-card invoice-table">
      <div class="table-responsive">
        <table class="table mb-0">
          <thead class="bg-light">
            <tr class="text-uppercase small text-muted">
              <th>Item</th>
              <th class="text-center">Image</th>
              <th class="text-end">Slots</th>
              <th class="text-end">Rate</th>
              <th class="text-end">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% cart.forEach(it => {
              const price = Number(it.price || 0);
              const qty = Number(it.quantity || 0);
              const listPrice = Number(it.listPrice || price);
              const discountPercentage = Number(it.discountPercentage || 0);
              const hasDiscount = discountPercentage > 0 && listPrice > price;
              const subtotal = price * qty;
              const imageSrc = it.image ? '/images/' + it.image : null;
            %>
              <tr>
                <td>
                  <div class="fw-semibold text-dark"><%= it.listing_title %></div>
                  <small class="text-muted d-block"><%= it.username %><% if (it.sport) { %> â€¢ <%= it.sport %><% } %></small>
                  <% if (it.offerMessage) { %>
                    <small class="text-info"><%= it.offerMessage %></small>
                  <% } %>
                </td>
                <td class="text-center">
                  <% if (imageSrc) { %>
                    <img src="<%= imageSrc %>" alt="<%= it.listing_title %>" class="img-fluid" style="max-height:60px;">
                  <% } else { %>
                    <span class="text-muted small">No image</span>
                  <% } %>
                </td>
                <td class="text-end"><%= qty %></td>
                <td class="text-end">
                  <% if (hasDiscount) { %>
                    <div class="text-decoration-line-through text-muted small">$<%= listPrice.toFixed(2) %></div>
                    <div class="text-success small">-<%= discountPercentage.toFixed(0) %>% off</div>
                  <% } %>
                  <div class="fw-semibold">$<%= price.toFixed(2) %></div>
                </td>
                <td class="text-end fw-semibold">$<%= subtotal.toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="invoice-card d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
      <div>
        <p class="text-muted mb-1">Total savings</p>
        <% const totalSavings = cart.reduce((sum, item) => {
          const listPrice = Number(item.listPrice || item.price || 0);
          const discount = listPrice - Number(item.price || 0);
          return sum + (discount > 0 ? discount * Number(item.quantity || 0) : 0);
        }, 0);
        %>
        <h3 class="fw-semibold text-success">$<%= totalSavings.toFixed(2) %></h3>
      </div>
      <div class="text-end">
        <p class="text-muted mb-1">Total paid</p>
        <h2 class="fw-bold">$<%= Number(total || 0).toFixed(2) %></h2>
      </div>
      <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="/shopping">Browse listings</a>
        <button class="btn btn-success" type="button" onclick="window.print()">Print receipt</button>
      </div>
    </div>
  </div>
<%- include('partials/footer') %>

