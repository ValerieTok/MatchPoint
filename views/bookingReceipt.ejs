<%- include('partials/head', {
  title: 'Booking Receipt',
  bodyClass: 'admin-page',
  extraHead: `
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  `
}) %>

<div class="app">
  <%- include("partials/userSidebar", { active: "cart" }) %>

  <main class="main">
    <header class="topbar">
      <div class="crumb">BOOKING CONFIRMED</div>
      <div class="topbar__pill"><i class="fa-solid fa-receipt"></i></div>
    </header>

    <div class="container-fluid px-4 py-4">
      <div class="receipt-container">
        <div class="receipt-success-card">
          <div class="success-icon">
            <i class="fa-solid fa-circle-check"></i>
          </div>
          <h2 class="mb-2">Booking Confirmed!</h2>
          <p class="text-muted mb-3">Thank you for booking a coaching session.</p>
          <% if (orderId) { %>
            <div class="booking-number">
              <span class="badge bg-success">Booking #<%= orderId %></span>
            </div>
          <% } %>
          <% if (deliveryAddress) { %>
            <p class="text-muted mt-3 small">
              <i class="fa-solid fa-location-dot me-2"></i>Session location: <strong><%= deliveryAddress %></strong>
            </p>
          <% } %>
        </div>

        <div class="receipt-details-card">
          <h5 class="card-title mb-4">Booking Details</h5>
          
          <div class="table-responsive">
            <table class="receipt-table">
              <thead>
                <tr>
                  <th>Item</th>
                  <th>Image</th>
                  <th>Slots</th>
                  <th>Rate</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <% cart.forEach(it => {
                  const price = Number(it.price || 0);
                  const qty = Number(it.quantity || 0);
                  const listPrice = Number(it.listPrice || price);
                  const discountPercentage = Number(it.discountPercentage || 0);
                  const hasDiscount = discountPercentage > 0 && listPrice > price;
                  const subtotal = price * qty;
                  const imageSrc = it.image ? '/images/' + it.image : null;
                  const sessionDateLabel = it.session_date ? new Date(it.session_date).toLocaleDateString() : 'TBC';
                  const sessionTimeLabel = it.session_time ? String(it.session_time).slice(0, 5) : 'TBC';
                %>
                  <tr>
                    <td>
                      <div class="item-details">
                        <div class="fw-semibold"><%= it.listing_title %></div>
                        <small class="text-muted"><%= it.username %><% if (it.sport) { %> â€¢ <%= it.sport %><% } %></small>
                        <small class="text-muted d-block">
                          <i class="fa-regular fa-calendar me-1"></i><%= sessionDateLabel %> 
                          <i class="fa-regular fa-clock ms-2 me-1"></i><%= sessionTimeLabel %>
                        </small>
                        <% if (it.offerMessage) { %>
                          <small class="text-success"><i class="fa-solid fa-tag me-1"></i><%= it.offerMessage %></small>
                        <% } %>
                      </div>
                    </td>
                    <td class="text-center">
                      <% if (imageSrc) { %>
                        <img src="<%= imageSrc %>" alt="<%= it.listing_title %>" class="receipt-item-image">
                      <% } else { %>
                        <div class="no-image-placeholder">
                          <i class="fa-regular fa-image"></i>
                        </div>
                      <% } %>
                    </td>
                    <td class="text-center"><%= qty %></td>
                    <td class="text-end">
                      <% if (hasDiscount) { %>
                        <div class="text-decoration-line-through text-muted small">$<%= listPrice.toFixed(2) %></div>
                        <div class="discount-badge">-<%= discountPercentage.toFixed(0) %>%</div>
                      <% } %>
                      <div class="fw-semibold">$<%= price.toFixed(2) %></div>
                    </td>
                    <td class="text-end fw-bold">$<%= subtotal.toFixed(2) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <div class="receipt-summary">
            <div class="row g-4">
              <% const totalSavings = cart.reduce((sum, item) => {
                const listPrice = Number(item.listPrice || item.price || 0);
                const discount = listPrice - Number(item.price || 0);
                return sum + (discount > 0 ? discount * Number(item.quantity || 0) : 0);
              }, 0);
              %>
              <% if (totalSavings > 0) { %>
              <div class="col-md-6">
                <div class="summary-box savings">
                  <span class="summary-label">Total Savings</span>
                  <span class="summary-value text-success">$<%= totalSavings.toFixed(2) %></span>
                </div>
              </div>
              <% } %>
              <div class="col-md-<%= totalSavings > 0 ? '6' : '12' %>">
                <div class="summary-box total">
                  <span class="summary-label">Total Paid</span>
                  <span class="summary-value">$<%= Number(total || 0).toFixed(2) %></span>
                </div>
              </div>
            </div>
          </div>

          <div class="receipt-actions">
            <button class="btn btn-outline-secondary" onclick="window.print()">
              <i class="fa-solid fa-print me-2"></i>Print Receipt
            </button>
            <a href="/userdashboard" class="btn btn-primary">
              <i class="fa-solid fa-list me-2"></i>Browse Listings
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<%- include('partials/footer') %>