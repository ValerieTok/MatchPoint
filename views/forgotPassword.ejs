<%- include('partials/head', { title: 'Reset Password', bodyClass: 'bg-light' }) %>
<%- include('partials/navbar', { user, activePage: '' }) %>
  <div class="container d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 68px);">
    <div class="col-lg-4 col-md-6">
      <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
        <h2 class="mb-2 text-center">Change your password</h2>
        <p class="text-center text-secondary mb-4">Update the password for your account.</p>
        <%- include('partials/flashMessages', { messages }) %>
        <form action="/forgot-password" method="post" class="d-grid gap-3">
          <div>
            <label class="form-label">New password</label>
            <input class="form-control forgot-password-input" type="password" name="password" minlength="6" required>
          </div>
          <div>
            <label class="form-label">Confirm password</label>
            <input class="form-control forgot-password-input" type="password" name="confirmPassword" minlength="6" required>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="show-password-forgot" data-show-password-target=".forgot-password-input">
            <label class="form-check-label" for="show-password-forgot">Show password</label>
          </div>
          <button class="btn btn-primary w-100 py-2" type="submit">Update password</button>
          <div class="text-center">
            <small class="text-muted">Want to return? <a href="/">Go back</a></small>
          </div>
        </form>
      </div>
    </div>
  </div>
<%- include('partials/showPasswordToggle') %>
<%- include('partials/footer') %>
