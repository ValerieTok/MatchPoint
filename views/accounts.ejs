<%- include('partials/head', { title: 'Manage Accounts', bodyClass: 'bg-light' }) %>
<%- include('partials/navbar', { user, activePage: 'users' }) %>

  <div class="container mb-5">
    <div class="bg-white rounded-4 shadow-sm p-4 mb-4">
      <h4 class="mb-3">Add account</h4>
      <%- include('partials/flashMessages', {
        messages,
        errorClass: 'alert alert-danger py-2',
        successClass: 'alert alert-success py-2'
      }) %>
      <form class="row g-3" method="post" action="/users">
        <div class="col-md-4">
          <label class="form-label">Username</label>
          <input required name="username" class="form-control" placeholder="Name">
        </div>
        <div class="col-md-4">
          <label class="form-label">Email</label>
          <input required type="email" name="email" class="form-control" placeholder="email@example.com">
        </div>
        <div class="col-md-4">
          <label class="form-label">Password</label>
          <input required type="password" name="password" class="form-control" placeholder="Min 6 chars">
        </div>
        <div class="col-md-4">
          <label class="form-label">Location</label>
          <input name="address" class="form-control" placeholder="Location">
        </div>
        <div class="col-md-4">
          <label class="form-label">Contact</label>
          <input name="contact" class="form-control" placeholder="Phone">
        </div>
        <div class="col-md-4">
          <label class="form-label">Role</label>
          <select name="role" class="form-select">
            <option value="user">Athlete</option>
            <option value="coach">Coach</option>
            <option value="admin">Admin</option>
          </select>
        </div>
        <div class="col-12 text-end">
          <button class="btn btn-primary" type="submit">Add account</button>
        </div>
      </form>
    </div>

    <div class="bg-white rounded-4 shadow-sm p-4">
      <h4 class="mb-3">Existing accounts</h4>
      <% if (!users || !users.length) { %>
        <div class="alert alert-info mb-0">No accounts found.</div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table align-middle">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Location</th>
                <th>Contact</th>
                <th>Role</th>
                <th>2FA</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(u => { %>
                <tr>
                  <form method="post" action="/users/<%= u.id %>">
                    <td class="text-muted"><%= u.id %></td>
                    <td><input name="username" class="form-control form-control-sm" value="<%= u.username %>"></td>
                    <td><input type="email" name="email" class="form-control form-control-sm" value="<%= u.email %>"></td>
                    <td><input name="address" class="form-control form-control-sm" value="<%= u.address || '' %>"></td>
                    <td><input name="contact" class="form-control form-control-sm" value="<%= u.contact || '' %>"></td>
                  <td>
                    <select name="role" class="form-select form-select-sm">
                      <option value="user" <%= u.role === 'user' ? 'selected' : '' %>>Athlete</option>
                      <option value="coach" <%= u.role === 'coach' ? 'selected' : '' %>>Coach</option>
                      <option value="admin" <%= u.role === 'admin' ? 'selected' : '' %>>Admin</option>
                    </select>
                  </td>
                  <td>
                    <% if (u.is_2fa_enabled) { %>
                      <span class="badge bg-success">Enabled</span>
                    <% } else { %>
                      <span class="badge bg-secondary">Off</span>
                    <% } %>
                  </td>
                  <td class="d-flex gap-2 align-items-center">
                    <button class="btn btn-sm btn-outline-primary" type="submit">Update</button>
                    <a class="btn btn-sm btn-outline-danger" href="/users/delete/<%= u.id %>" onclick="return confirm('Delete this user?');">Delete</a>
                    <% if (u.is_2fa_enabled) { %>
                      <button class="btn btn-sm btn-outline-secondary" type="submit" formaction="/users/<%= u.id %>/disable-2fa" formmethod="post" onclick="return confirm('Disable 2FA for this user?');">Disable 2FA</button>
                    <% } %>
                  </td>
                </form>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
<%- include('partials/footer') %>
