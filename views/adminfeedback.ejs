<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Feedback - MatchPoint</title>
    <link rel="stylesheet" href="/css/admin-feedback.css" />
  </head>
  <body class="admin-feedback">
    <div class="admin-shell">
      <aside class="sidebar">
        <div class="brand">
          <div class="brand-mark"><span></span></div>
          <div>MatchPoint</div>
        </div>
        <nav class="nav">
          <a href="/admindashboard"><span class="dot"></span>Overview</a>
          <a href="/admincoaches"><span class="dot"></span>Coaches</a>
          <a href="/adminstudents"><span class="dot"></span>Students</a>
          <a href="/adminservices"><span class="dot"></span>Services</a>
          <a class="active" href="/adminfeedback"><span class="dot"></span>Feedback</a>
        </nav>
      </aside>

      <main class="main">
        <section class="welcome">
          <div>
            <h1>
              Hello <%= user?.username || (user?.email ? user.email.split('@')[0] : 'Admin') %>,
            </h1>
            <p>Review and approve student feedback.</p>
          </div>
          <div class="welcome-badge">Admin Feedback</div>
        </section>

        <% const safeStats = stats || {}; %>
        <section class="stats">
          <div class="stat-card">
            <div class="stat-icon">S</div>
            <div>
              <span>Total Students</span>
              <h3><%= (safeStats.totalStudents || 0).toLocaleString('en-US') %></h3>
            </div>
          </div>
          <div class="stat-card">
            <div class="stat-icon">C</div>
            <div>
              <span>Total Coaches</span>
              <h3><%= (safeStats.totalCoaches || 0).toLocaleString('en-US') %></h3>
            </div>
          </div>
        </section>

        <section class="feedback">
          <% const rows = Array.isArray(feedback) ? feedback : []; %>
          <% const activeFilters = filters || {}; %>
          <% const pager = pagination || { page: 1, perPage: 6, totalReviews: rows.length, totalPages: 1 }; %>
          <% const buildQuery = (pageNum) => { %>
            <% const params = []; %>
            <% if (activeFilters.search) params.push(`search=${encodeURIComponent(activeFilters.search)}`); %>
            <% if (activeFilters.status) params.push(`status=${encodeURIComponent(activeFilters.status)}`); %>
            <% if (activeFilters.sort) params.push(`sort=${encodeURIComponent(activeFilters.sort)}`); %>
            <% params.push(`page=${pageNum}`); %>
            <% return params.join('&'); %>
          <% }; %>

          <div class="feedback-head">
            <h2>Recent Feedback</h2>
            <div class="feedback-tools">
              <input class="input" id="feedbackSearch" type="search" placeholder="Search" value="<%= activeFilters.search || '' %>" />
              <select class="select" id="feedbackStatus">
                <option value="">Status: All</option>
                <option value="pending" <%= activeFilters.status === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="approved" <%= activeFilters.status === 'approved' ? 'selected' : '' %>>Approved</option>
                <option value="rejected" <%= activeFilters.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
              </select>
              <select class="select" id="feedbackSort">
                <option value="newest" <%= activeFilters.sort !== 'oldest' && activeFilters.sort !== 'highest' && activeFilters.sort !== 'lowest' ? 'selected' : '' %>>Sort: Newest</option>
                <option value="oldest" <%= activeFilters.sort === 'oldest' ? 'selected' : '' %>>Sort: Oldest</option>
                <option value="highest" <%= activeFilters.sort === 'highest' ? 'selected' : '' %>>Highest to Lowest</option>
                <option value="lowest" <%= activeFilters.sort === 'lowest' ? 'selected' : '' %>>Lowest to Highest</option>
              </select>
            </div>
          </div>

          <% if (!rows.length) { %>
            <div class="empty">No feedback found.</div>
          <% } else { %>
            <div class="feedback-grid">
              <% rows.forEach(row => { %>
                <article class="feedback-card">
                  <div class="feedback-meta">
                    <div>
                      <div class="from">From: <strong><%= row.student_name %></strong> (User)</div>
                      <div class="to">To: <strong><%= row.coach_name || 'Coach' %></strong></div>
                    </div>
                    <div class="session">
                      <div class="session-title"><%= row.listing_title || 'Coaching Session' %></div>
                      <div class="session-date">
                        <% const createdDate = row.created_at ? new Date(row.created_at) : null; %>
                        <%= createdDate && !Number.isNaN(createdDate.getTime()) ? createdDate.toLocaleDateString('en-GB', { weekday: 'long', day: '2-digit', month: 'long', year: 'numeric' }) : '' %>
                      </div>
                    </div>
                  </div>

                  <div class="rating">
                    <% const rating = Math.round(Number(row.rating || 0)); %>
                    <% for (let i = 1; i <= 5; i += 1) { %>
                      <span class="<%= i <= rating ? 'star filled' : 'star' %>">&#9733;</span>
                    <% } %>
                    <span class="score"><%= Number(row.rating || 0).toFixed(1) %></span>
                  </div>

                  <p class="comment"><%= row.comment || 'No comment provided.' %></p>

                  <div class="feedback-actions">
                    <span class="status <%= row.review_status %>"><%= String(row.review_status || 'pending').toUpperCase() %></span>
                    <div class="buttons">
                      <form method="post" action="/adminfeedback/<%= row.id %>/approve">
                        <button class="btn approve" type="submit">Approve</button>
                      </form>
                      <form method="post" action="/adminfeedback/<%= row.id %>/reject">
                        <button class="btn reject" type="submit">Reject</button>
                      </form>
                    </div>
                  </div>
                </article>
              <% }) %>
            </div>
          <% } %>

          <div class="pager">
            <% const startIndex = pager.totalReviews ? ((pager.page - 1) * pager.perPage + 1) : 0; %>
            <% const endIndex = Math.min(pager.page * pager.perPage, pager.totalReviews || 0); %>
            <div>Showing <%= startIndex %> to <%= endIndex %> of <%= pager.totalReviews %> reviews</div>
            <div class="pages">
              <% if (pager.totalPages > 1) { %>
                <% if (pager.page > 1) { %>
                  <a class="page" href="/adminfeedback?<%= buildQuery(pager.page - 1) %>">&lt;</a>
                <% } %>
                <% for (let p = 1; p <= pager.totalPages; p += 1) { %>
                  <a class="page <%= p === pager.page ? 'active' : '' %>" href="/adminfeedback?<%= buildQuery(p) %>"><%= p %></a>
                <% } %>
                <% if (pager.page < pager.totalPages) { %>
                  <a class="page" href="/adminfeedback?<%= buildQuery(pager.page + 1) %>">&gt;</a>
                <% } %>
              <% } else { %>
                <div class="page active">1</div>
              <% } %>
            </div>
          </div>
        </section>
      </main>
    </div>
    <script>
      const search = document.getElementById('feedbackSearch');
      const sort = document.getElementById('feedbackSort');
      const status = document.getElementById('feedbackStatus');

      const buildUrl = (params) => {
        const url = new URL(window.location.href);
        Object.keys(params).forEach((key) => {
          if (params[key]) {
            url.searchParams.set(key, params[key]);
          } else {
            url.searchParams.delete(key);
          }
        });
        return url.toString();
      };

      sort?.addEventListener('change', () => {
        window.location.href = buildUrl({ sort: sort.value, page: 1 });
      });

      status?.addEventListener('change', () => {
        window.location.href = buildUrl({ status: status.value, page: 1 });
      });

      search?.addEventListener('keydown', (event) => {
        if (event.key === 'Enter') {
          const value = (search.value || '').trim().toLowerCase();
          window.location.href = buildUrl({ search: value, page: 1 });
        }
      });
    </script>
  </body>
</html>
