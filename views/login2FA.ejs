<%- include('partials/head', { title: 'Two-Factor Verification', bodyClass: 'auth-2fa' }) %>
<%- include('partials/navbar', { user, activePage: '' }) %>
  <div class="auth-2fa__wrap">
    <div class="auth-2fa__panel">
      <div class="auth-2fa__badge">Secure Login</div>
      <h1 class="auth-2fa__title">Two-factor verification</h1>
      <p class="auth-2fa__subtitle">Enter the 6-digit code from your authenticator app to continue.</p>
      <%- include('partials/flashMessages', { messages }) %>
      <form action="/login2FA" method="post" class="auth-2fa__form">
        <div class="auth-2fa__field">
          <label class="form-label">Verification code</label>
          <input class="form-control auth-2fa__input" type="text" name="token" placeholder="123456" pattern="\d{6}" maxlength="6" autocomplete="one-time-code" inputmode="numeric" required>
        </div>
        <button class="btn auth-2fa__btn" type="submit">Verify and log in</button>
        <div class="auth-2fa__footnote">
          <span>Lost access?</span>
          <a href="/login">Log in again</a>
        </div>
      </form>
    </div>
  </div>
<%- include('partials/footer') %>
