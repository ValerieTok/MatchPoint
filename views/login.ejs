<%- include('partials/head', {
  title: 'Log in',
  bodyClass: 'entry-page admin-page entry-login',
  extraHead: `
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  `
}) %>

<section class="entry-shell">
  <div class="entry-topbar">
    <a class="entry-brand" href="/">
      <span class="entry-brand__dot entry-brand__dot--img">
        <img src="/images/soccer.png.png" alt="Soccer ball">
      </span>
      <span class="entry-brand__name">MatchPoint</span>
    </a>
    <div class="entry-topbar__actions">
      <a class="entry-nav entry-nav--active" href="/login">Login</a>
      <a class="entry-nav" href="/register">Sign up</a>
    </div>
  </div>

  <div class="entry-layout">
    <div class="entry-card">
      <div class="entry-eyebrow">MatchPoint</div>
      <h1 class="entry-title">Back in the Game</h1>
      <p class="entry-subtitle">Lock in sessions, check schedules, and keep your training tight.</p>
      <div class="entry-chips">
        <span class="entry-chip"><i class="fa-solid fa-bolt"></i> Fast bookings</span>
        <span class="entry-chip"><i class="fa-solid fa-check"></i> Verified coaches</span>
        <span class="entry-chip"><i class="fa-solid fa-bell"></i> Smart reminders</span>
      </div>

      <%- include('partials/flashMessages', { messages }) %>

      <form action="/login" method="post" class="entry-form">
        <div>
          <label class="form-label" for="login-email">Email</label>
          <div class="input-icon">
            <i class="fa-solid fa-envelope"></i>
            <input id="login-email" class="form-control" type="email" name="email" required autocomplete="email">
          </div>
        </div>
        <div>
          <label class="form-label" for="login-password">Password</label>
          <div class="input-icon">
            <i class="fa-solid fa-lock"></i>
            <input id="login-password" class="form-control login-password" type="password" name="password" required autocomplete="current-password">
          </div>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="show-password-login" data-show-password-target=".login-password">
          <label class="form-check-label" for="show-password-login">Show password</label>
        </div>
        <button class="entry-btn w-100" type="submit">Log in</button>
        <div class="entry-footer">
          First time? <a class="entry-link" href="/register">Create account</a>
        </div>
      </form>
    </div>
  </div>
</section>

<%- include('partials/showPasswordToggle') %>
<%- include('partials/footer') %>
