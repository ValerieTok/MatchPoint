<%- include('partials/head', {
  title: 'Log in',
  bodyClass: 'entry-page admin-page',
  extraHead: `
    <link rel="stylesheet" href="/css/user-common.css">
    <link rel="stylesheet" href="/css/admin-common.css">
    <link rel="stylesheet" href="/css/auth.css">
  `
}) %>

<section class="entry-shell">
  <div class="entry-topbar">
    <div class="entry-topbar__actions">
      <a class="entry-nav entry-nav--active" href="/login">Login</a>
      <a class="entry-nav" href="/register">Sign up</a>
    </div>
  </div>

  <div class="entry-layout">
    <div class="entry-card">
      <div class="entry-eyebrow">MatchPoint</div>
      <h1 class="entry-title">Back in the game</h1>
      <p class="entry-subtitle">Lock in sessions, check schedules, and keep your training tight.</p>

      <%- include('partials/flashMessages', { messages }) %>

      <form action="/login" method="post" class="entry-form d-grid gap-3">
        <div>
          <label class="form-label">Email</label>
          <input class="form-control" type="email" name="email" required>
        </div>
        <div>
          <label class="form-label">Password</label>
          <input class="form-control login-password" type="password" name="password" required>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="show-password-login" data-show-password-target=".login-password">
          <label class="form-check-label" for="show-password-login">Show password</label>
        </div>
        <button class="entry-btn w-100" type="submit">Log in</button>
        <div class="entry-footer">
          First time? <a class="entry-link" href="/register">Create account</a>
        </div>
      </form>
    </div>

    <div class="entry-hero">
      <div>
        <h3>Train hard. Track harder.</h3>
        <p>Build your session plan with coaches who push your pace and sharpen your game.</p>
      </div>
      <div class="entry-hero__stats">
        <div class="entry-stat">
          <strong>Lightning bookings</strong>
          <span>Lock a session fast</span>
        </div>
        <div class="entry-stat">
          <strong>Verified coaches</strong>
          <span>Sport-specific focus</span>
        </div>
        <div class="entry-stat">
          <strong>Session reminders</strong>
          <span>Stay on the grind</span>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/showPasswordToggle') %>
<%- include('partials/footer') %>
