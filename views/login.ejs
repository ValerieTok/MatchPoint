<%- include('partials/head', { title: 'Log in', bodyClass: 'bg-light' }) %>
<%- include('partials/navbar', { user, activePage: '' }) %>
  <div class="container d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 68px);">
    <div class="col-lg-4 col-md-6">
      <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
        <h2 class="mb-4 text-center">Log in</h2>
        <%- include('partials/flashMessages', { messages }) %>
        <form action="/login" method="post" class="d-grid gap-3">
          <div>
            <label class="form-label">Email</label>
            <input class="form-control" type="email" name="email" required>
          </div>
          <div>
            <label class="form-label">Password</label>
            <input class="form-control login-password" type="password" name="password" required>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="show-password-login" data-show-password-target=".login-password">
            <label class="form-check-label" for="show-password-login">Show password</label>
          </div>
          <button class="btn btn-primary w-100 py-2" type="submit">Log in</button>
          <div class="text-center">
            <small class="text-muted">First time? <a href="/register">Create account</a></small>
          </div>
        </form>
      </div>
    </div>
  </div>
<%- include('partials/showPasswordToggle') %>
<%- include('partials/footer') %>


