<%- include('partials/head', { title: 'Your Bookings', bodyClass: 'bg-light' }) %>
<%- include('partials/navbar', { user, activePage: 'orderUser' }) %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <p class="text-muted mb-1">Booking history</p>
        <h3 class="mb-0">Your Bookings</h3>
      </div>
    </div>

    <%- include('partials/flashMessages', { messages }) %>

    <% if (!orders || !orders.length) { %>
      <div class="alert alert-info">No bookings yet.</div>
    <% } else { %>
      <div class="accordion" id="user-orders-accordion">
        <% orders.forEach((o, idx) => { %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="u-heading-<%= o.id %>">
              <button class="accordion-button <%= idx ? 'collapsed' : '' %>" type="button" data-bs-toggle="collapse" data-bs-target="#u-collapse-<%= o.id %>">
                  <div class="w-100 d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">Booking #<%= o.id %></div>
                      <div class="text-muted small"><%= new Date(o.created_at).toLocaleString() %></div>
                    </div>
                    <div class="text-end">
                      <div class="fw-semibold">$<%= Number(o.total || 0).toFixed(2) %></div>
                      <div class="text-muted small"><%= o.address || 'No location' %></div>
                      <% if (o.review) { %>
                        <div class="text-warning small">
                          <% for (let i = 0; i < o.review.rating; i++) { %>&#9733;<% } %>
                          <% for (let i = o.review.rating; i < 5; i++) { %>&#9734;<% } %>
                        </div>
                      <% } %>
                    </div>
                  </div>
              </button>
            </h2>
            <div id="u-collapse-<%= o.id %>" class="accordion-collapse collapse <%= idx ? '' : 'show' %>" data-bs-parent="#user-orders-accordion">
              <div class="accordion-body">
                <div class="d-flex justify-content-end mb-2">
                  <button class="btn btn-sm btn-outline-secondary" type="button" onclick="printOrder('order-user-<%= o.id %>', 'Booking #<%= o.id %>')">Print this booking</button>
                </div>
                <div id="order-user-<%= o.id %>">
                  <% if (!o.items || !o.items.length) { %>
                    <div class="alert alert-light mb-0">No listings recorded.</div>
                  <% } else { %>
                    <div class="table-responsive">
                      <table class="table align-middle">
                      <thead>
                        <tr>
                          <th>Item</th>
                          <th class="text-center">Image</th>
                          <th class="text-end">Slots</th>
                          <th class="text-end">Rate</th>
                          <th class="text-end">Subtotal</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% o.items.forEach(it => {
                          const price = Number(it.price || 0);
                          const qty = Number(it.quantity || 0);
                          const listPrice = Number(it.listPrice || price);
                          const discountPercentage = Number(it.discountPercentage || 0);
                          const hasDiscount = discountPercentage > 0 && listPrice > price;
                          const subtotal = price * qty;
                          const imageSrc = it.image ? '/images/' + it.image : null;
                        %>
                          <tr>
                            <td>
                              <div class="fw-semibold"><%= it.productName %></div>
                              <div class="text-muted small"><%= it.coachName %><% if (it.sport) { %> â€¢ <%= it.sport %><% } %></div>
                              <% if (it.offerMessage) { %>
                                <div class="text-info small"><%= it.offerMessage %></div>
                              <% } %>
                            </td>
                            <td class="text-center">
                              <% if (imageSrc) { %>
                                <img src="<%= imageSrc %>" alt="<%= it.productName %>" class="d-block mx-auto" style="max-height:70px;">
                              <% } else { %>
                                <span class="text-muted small">No image</span>
                              <% } %>
                            </td>
                            <td class="text-end"><%= qty %></td>
                            <td class="text-end">
                              <div class="text-muted small">Per slot</div>
                              <% if (hasDiscount) { %>
                                <div class="text-decoration-line-through text-muted small">$<%= listPrice.toFixed(2) %></div>
                              <% } %>
                              <div class="fw-semibold">$<%= price.toFixed(2) %></div>
                              <% if (discountPercentage > 0) { %>
                                <div class="text-success small">-<%= discountPercentage.toFixed(0) %>% off (new rate)</div>
                              <% } else { %>
                                <div class="text-muted small">Current rate</div>
                              <% } %>
                            </td>
                            <td class="text-end">
                              <div class="fw-semibold">$<%= subtotal.toFixed(2) %></div>
                              <% if (hasDiscount) { %>
                                <div class="text-success small">Discount applied</div>
                              <% } %>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                  <% } %>
                  <div class="mt-3">
                    <% if (o.delivered_at) { %>
                      <div class="alert alert-success py-2">
                        Session completed at <strong><%= new Date(o.delivered_at).toLocaleString() %></strong>
                      </div>
                    <% } else { %>
                      <div class="alert alert-secondary py-2">
                        Awaiting session confirmation.
                      </div>
                    <% } %>
                    <% if (o.review) { %>
                      <div class="border rounded-3 p-3 bg-white">
                        <div class="fw-semibold mb-1">Your review</div>
                        <div class="text-warning mb-1">
                          <% for (let i = 0; i < o.review.rating; i++) { %>&#9733;<% } %>
                          <% for (let i = o.review.rating; i < 5; i++) { %>&#9734;<% } %>
                        </div>
                        <p class="mb-0 text-muted"><%= o.review.comment || 'No comment provided.' %></p>
                      </div>
                    <% } else if (o.delivered_at) { %>
                      <div class="mt-2">
                        <a class="btn btn-outline-primary btn-sm" href="/orders/<%= o.id %>/review">Leave a review</a>
                      </div>
                    <% } else { %>
                      <form class="mt-2" action="/orders/<%= o.id %>/confirm-delivery" method="post">
                        <button class="btn btn-outline-success btn-sm" type="submit">
                          Confirm session &amp; review
                        </button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
<%- include('partials/footer', { extraScripts: `<script>
    function printOrder(elementId, title) {
      var el = document.getElementById(elementId);
      if (!el) return;
      var iframe = document.createElement('iframe');
      iframe.style.position = 'fixed';
      iframe.style.right = '0';
      iframe.style.bottom = '0';
      iframe.style.width = '0';
      iframe.style.height = '0';
      iframe.style.border = '0';
      document.body.appendChild(iframe);
      var doc = iframe.contentWindow.document;
      doc.open();
      doc.write('<html><head><title>' + (title || 'Booking') + '</title>');
      doc.write('<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">');
      doc.write('</head><body class="p-3">');
      doc.write(el.innerHTML);
      doc.write('</body></html>');
      doc.close();
      iframe.contentWindow.focus();
      iframe.contentWindow.print();
      setTimeout(function () {
        document.body.removeChild(iframe);
      }, 1000);
    }
  </script>` }) %>
