<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Services - MatchPoint</title>
    <link rel="stylesheet" href="/css/admin-services.css" />
  </head>
  <body class="admin-services">
    <div class="admin-shell">
      <aside class="sidebar">
        <div class="brand">
          <div class="brand-mark"><span></span></div>
          <div>MatchPoint</div>
        </div>
        <nav class="nav">
          <a href="/admindashboard"><span class="dot"></span>Overview</a>
          <a href="/admincoaches"><span class="dot"></span>Coaches</a>
          <a href="/adminstudents"><span class="dot"></span>Students</a>
          <a class="active" href="/adminservices"><span class="dot"></span>Services</a>
          <a href="/adminfeedback"><span class="dot"></span>Feedback</a>
        </nav>
      </aside>

      <main class="main">
        <section class="welcome">
          <div>
            <h1>
              Hello <%= user?.username || (user?.email ? user.email.split('@')[0] : 'Admin') %>,
            </h1>
            <p>Review and manage active coaching services.</p>
          </div>
          <div class="welcome-badge">Admin Services</div>
        </section>

        <% const safeStats = stats || {}; %>
        <section class="stats">
          <div class="stat-card">
            <div class="stat-icon">S</div>
            <div>
              <span>Total Services</span>
              <h3><%= (safeStats.totalServices || 0).toLocaleString('en-US') %></h3>
            </div>
          </div>
        </section>

        <section class="activity">
          <% const rows = Array.isArray(services) ? services : []; %>
          <% const activeFilters = filters || {}; %>
          <% const pager = pagination || { page: 1, perPage: 8, totalServices: rows.length, totalPages: 1 }; %>
          <% const buildQuery = (pageNum) => { %>
            <% const params = []; %>
            <% if (activeFilters.search) params.push(`search=${encodeURIComponent(activeFilters.search)}`); %>
            <% if (activeFilters.sort) params.push(`sort=${encodeURIComponent(activeFilters.sort)}`); %>
            <% params.push(`page=${pageNum}`); %>
            <% return params.join('&'); %>
          <% }; %>

          <div class="activity-head">
            <h2>All Services</h2>
            <div class="activity-tools">
              <input class="input" id="serviceSearch" type="search" placeholder="Search" value="<%= activeFilters.search || '' %>" />
              <select class="select" id="serviceSort">
                <option value="newest" <%= activeFilters.sort !== 'oldest' ? 'selected' : '' %>>Sort by: Newest</option>
                <option value="oldest" <%= activeFilters.sort === 'oldest' ? 'selected' : '' %>>Sort by: Oldest</option>
              </select>
            </div>
          </div>

          <table>
            <thead>
              <tr>
                <th>Sport</th>
                <th>Duration per Session</th>
                <th>Price per Session</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (!rows.length) { %>
                <tr>
                  <td colspan="5">No services found.</td>
                </tr>
              <% } else { %>
                <% rows.forEach(row => { %>
                  <tr>
                    <td><%= row.sport || row.listing_title || 'Service' %></td>
                    <td><%= row.duration_minutes ? `${row.duration_minutes} minutes` : '-' %></td>
                    <td><%= Number(row.price || 0).toLocaleString('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 }) %></td>
                    <td>
                      <span class="status <%= row.is_active ? 'active' : 'inactive' %>">
                        <%= row.is_active ? 'ACTIVE' : 'INACTIVE' %>
                      </span>
                    </td>
                    <td class="actions">
                      <form method="post" action="/adminservices/<%= row.id %>/toggle">
                        <input type="hidden" name="is_active" value="<%= row.is_active ? 0 : 1 %>">
                        <button class="btn danger" type="submit">
                          <%= row.is_active ? 'Remove Service' : 'Activate Service' %>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>

          <div class="pager">
            <% const startIndex = pager.totalServices ? ((pager.page - 1) * pager.perPage + 1) : 0; %>
            <% const endIndex = Math.min(pager.page * pager.perPage, pager.totalServices || 0); %>
            <div>Showing <%= startIndex %> to <%= endIndex %> of <%= pager.totalServices %> services</div>
            <div class="pages">
              <% if (pager.totalPages > 1) { %>
                <% if (pager.page > 1) { %>
                  <a class="page" href="/adminservices?<%= buildQuery(pager.page - 1) %>">&lt;</a>
                <% } %>
                <% for (let p = 1; p <= pager.totalPages; p += 1) { %>
                  <a class="page <%= p === pager.page ? 'active' : '' %>" href="/adminservices?<%= buildQuery(p) %>"><%= p %></a>
                <% } %>
                <% if (pager.page < pager.totalPages) { %>
                  <a class="page" href="/adminservices?<%= buildQuery(pager.page + 1) %>">&gt;</a>
                <% } %>
              <% } else { %>
                <div class="page active">1</div>
              <% } %>
            </div>
          </div>
        </section>
      </main>
    </div>
    <script>
      const search = document.getElementById('serviceSearch');
      const sort = document.getElementById('serviceSort');

      const buildUrl = (params) => {
        const url = new URL(window.location.href);
        Object.keys(params).forEach((key) => {
          if (params[key]) {
            url.searchParams.set(key, params[key]);
          } else {
            url.searchParams.delete(key);
          }
        });
        return url.toString();
      };

      sort?.addEventListener('change', () => {
        window.location.href = buildUrl({ sort: sort.value, page: 1 });
      });

      search?.addEventListener('keydown', (event) => {
        if (event.key === 'Enter') {
          const value = (search.value || '').trim().toLowerCase();
          window.location.href = buildUrl({ search: value, page: 1 });
        }
      });
    </script>
  </body>
</html>
