<%- include('partials/head', {
  title: 'Admin Services - MatchPoint',
  bodyClass: 'admin-page admin-services',
  extraHead: `
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  `
}) %>

<div class="app">
  <%- include('partials/adminSidebar', { active: 'services' }) %>

      <main class="main">
        <header class="topbar">
          <div class="crumb">ADMIN SERVICES</div>
          <div class="topbar__pill"><i class="fa-solid fa-layer-group"></i></div>
        </header>

        <% const safeStats = stats || {}; %>
        <section class="hero">
          <div class="hero__left">
            <h1>
              Hello <span class="hero__name"><%= user?.username || (user?.email ? user.email.split('@')[0] : 'Admin') %></span>
              <span class="wave">ðŸ‘‹</span>,
            </h1>
            <div class="stats">
              <div class="stat">
                <div class="stat__icon"><i class="fa-solid fa-layer-group"></i></div>
                <div class="stat__meta">
                  <div class="stat__label">Total Services</div>
                  <div class="stat__value"><%= (safeStats.totalServices || 0).toLocaleString('en-US') %></div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="card">
          <% const rows = Array.isArray(services) ? services : []; %>
          <% const activeFilters = filters || {}; %>
          <% const pager = pagination || { page: 1, perPage: 8, totalServices: rows.length, totalPages: 1 }; %>
          <% const buildQuery = (pageNum) => { %>
            <% const params = []; %>
            <% if (activeFilters.search) params.push(`search=${encodeURIComponent(activeFilters.search)}`); %>
            <% if (activeFilters.sort) params.push(`sort=${encodeURIComponent(activeFilters.sort)}`); %>
            <% params.push(`page=${pageNum}`); %>
            <% return params.join('&'); %>
          <% }; %>

          <div class="card__head">
            <div class="card__title">All Services</div>
            <div class="card__tools">
              <div class="search">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input id="serviceSearch" type="search" placeholder="Search" value="<%= activeFilters.search || '' %>" />
              </div>
              <div class="sort">
                <span class="sort__label">SORT BY:</span>
                <select class="sort__btn" id="serviceSort">
                  <option value="newest" <%= activeFilters.sort !== 'oldest' ? 'selected' : '' %>>Newest</option>
                  <option value="oldest" <%= activeFilters.sort === 'oldest' ? 'selected' : '' %>>Oldest</option>
                </select>
              </div>
            </div>
          </div>

          <div class="tableWrap">
            <table class="table">
              <thead>
                <tr>
                  <th>Sport</th>
                  <th>Duration per Session</th>
                  <th>Price per Session</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (!rows.length) { %>
                  <tr>
                    <td colspan="5">No services found.</td>
                  </tr>
                <% } else { %>
                  <% rows.forEach(row => { %>
                    <tr>
                      <td><%= row.sport || row.listing_title || 'Service' %></td>
                      <td><%= row.duration_minutes ? `${row.duration_minutes} minutes` : '-' %></td>
                      <td><%= Number(row.price || 0).toLocaleString('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 }) %></td>
                      <td>
                        <span class="pill pill--<%= row.is_active ? 'active' : 'inactive' %>">
                          <%= row.is_active ? 'ACTIVE' : 'INACTIVE' %>
                        </span>
                      </td>
                      <td class="actions">
                        <form method="post" action="/adminservices/<%= row.id %>/toggle">
                          <input type="hidden" name="is_active" value="<%= row.is_active ? 0 : 1 %>">
                          <button class="btn danger" type="submit">
                            <%= row.is_active ? 'Remove Service' : 'Activate Service' %>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>

          <div class="card__foot">
            <% const startIndex = pager.totalServices ? ((pager.page - 1) * pager.perPage + 1) : 0; %>
            <% const endIndex = Math.min(pager.page * pager.perPage, pager.totalServices || 0); %>
            <div class="hint">Showing <%= startIndex %> to <%= endIndex %> of <%= pager.totalServices %> services</div>
            <div class="pager">
              <% if (pager.totalPages > 1) { %>
                <% if (pager.page > 1) { %>
                  <a class="pager__btn" href="/adminservices?<%= buildQuery(pager.page - 1) %>"><i class="fa-solid fa-chevron-left"></i></a>
                <% } %>
                <% for (let p = 1; p <= pager.totalPages; p += 1) { %>
                  <a class="pager__num <%= p === pager.page ? 'pager__num--active' : '' %>" href="/adminservices?<%= buildQuery(p) %>"><%= p %></a>
                <% } %>
                <% if (pager.page < pager.totalPages) { %>
                  <a class="pager__btn" href="/adminservices?<%= buildQuery(pager.page + 1) %>"><i class="fa-solid fa-chevron-right"></i></a>
                <% } %>
              <% } else { %>
                <span class="pager__num pager__num--active">1</span>
              <% } %>
            </div>
          </div>
        </section>
  </main>
</div>

<%- include('partials/footer', {
  extraScripts: `
    <script>
      const search = document.getElementById('serviceSearch');
      const sort = document.getElementById('serviceSort');

      const buildUrl = (params) => {
        const url = new URL(window.location.href);
        Object.keys(params).forEach((key) => {
          if (params[key]) {
            url.searchParams.set(key, params[key]);
          } else {
            url.searchParams.delete(key);
          }
        });
        return url.toString();
      };

      sort?.addEventListener('change', () => {
        window.location.href = buildUrl({ sort: sort.value, page: 1 });
      });

      search?.addEventListener('keydown', (event) => {
        if (event.key === 'Enter') {
          const value = (search.value || '').trim().toLowerCase();
          window.location.href = buildUrl({ search: value, page: 1 });
        }
      });
    </script>
  `
}) %>
