<%- include('partials/head', {
  title: 'Slots',
  bodyClass: 'admin-page coach-dashboard',
  extraHead: `
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  `
}) %>

<div class="app">
  <%- include('partials/coachSidebar', { active: 'slots' }) %>

  <main class="main">
    <header class="topbar">
      <div class="crumb">SLOTS</div>
      <div class="topbar__pill"><i class="fa-solid fa-clock"></i></div>
    </header>

    <section class="section">
      <div class="section__head">
        <div>
          <div class="section__title">Your Availability</div>
          <p class="section__subtitle">Create slots to let students book you.</p>
        </div>
        <a class="btn btn--ghost btn--sm" href="/slots/create"><i class="fa-solid fa-circle-plus"></i> Create slot</a>
      </div>

      <%- include('partials/flashMessages', { messages }) %>

      <% if (!slots || !slots.length) { %>
        <div class="empty">No slots yet. Add your first slot to share availability.</div>
      <% } else { %>
        <div class="tableWrap">
          <table class="table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Duration</th>
                <th>Location</th>
                <th>Note</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% slots.forEach(slot => { %>
                <tr>
                  <td><%= slot.slot_date %></td>
                  <td><%= slot.slot_time %></td>
                  <td><%= slot.duration_minutes ? slot.duration_minutes + ' mins' : '-' %></td>
                  <td><%= slot.location || '-' %></td>
                  <td><%= slot.note || '-' %></td>
                  <td class="table__actions">
                    <form action="/slots/delete/<%= slot.id %>" method="POST" onsubmit="return confirm('Delete this slot?');">
                      <button type="submit" class="btn btn--ghost btn--sm btn--danger"><i class="fa-solid fa-trash"></i> Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </section>
  </main>
</div>
