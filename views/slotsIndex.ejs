<%- include('partials/head', {
  title: 'Slots',
  bodyClass: 'admin-page coach-dashboard',
  extraHead: `
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  `
}) %>

<div class="app">
  <%- include('partials/coachSidebar', { active: 'slots' }) %>

 
  <main class="main">
    <header class="topbar">
      <div class="crumb">SLOTS</div>
      <div class="topbar__pill"><i class="fa-solid fa-clock"></i></div>
    </header>

    <section class="section">
      <div class="section__head">
        <div>
          <div class="section__title">All Availability</div>
          <p class="section__subtitle">All slots across your listings, earliest first.</p>
        </div>
      </div>

      <%- include('partials/flashMessages', { messages }) %>

      <% if (!slots || !slots.length) { %>
        <div class="empty">No slots yet. Add your first slot to share availability.</div>
      <% } else { %>
        <div class="tableWrap">
          <table class="table">
            <thead>
              <tr>
                <th>Listing</th>
                <th>Date</th>
                <th>Time</th>
                <th>Duration</th>
                <th>Location</th>
                <th>Note</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% slots.forEach(slot => { %>
                <tr>
                  <td><%= slot.listing_title || '-' %></td>
                  <td><%= sessionDateHelper.formatSessionDate(slot.slot_date) %></td>
                  <td><%= sessionDateHelper.formatSessionTime(slot.slot_time) %></td>
                  <td><%= slot.duration_minutes ? slot.duration_minutes + ' mins' : '-' %></td>
                  <td><%= slot.location || '-' %></td>
                  <td><%= slot.note || '-' %></td>
                  <td>
                    <% if (Number(slot.is_available) === 1) { %>
                      <span class="pill pill--upcoming">AVAILABLE</span>
                    <% } else { %>
                      <span class="pill pill--inactive">BOOKED</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </section>
  </main>
</div>
