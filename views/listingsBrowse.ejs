<%- include('partials/head', {
  title: 'Find a Coach',
  extraHead: `<style>
    body { background: #f7f7f9; }
    .welcome-card {
      background: linear-gradient(135deg, #f9fafb, #eef2ff);
      border: 1px solid #e5e7eb;
      border-radius: 18px;
    }
    .product-card {
      border: 1px solid #e5e7eb;
      border-radius: 14px;
      box-shadow: 0 4px 18px rgba(0, 0, 0, 0.04);
      transition: transform 0.1s ease, box-shadow 0.1s ease;
    }
    .product-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }
    .product-img {
      height: 180px;
      object-fit: contain;
      padding: 12px;
    }
  </style>`
}) %>
<%- include('partials/navbar', { user, activePage: 'shopping' }) %>

  <div class="container py-4">
    <div class="welcome-card p-4 mb-4">
      <div class="d-flex flex-wrap justify-content-between align-items-center">
        <div>
          <p class="mb-1 text-muted">Welcome back</p>
          <h3 class="mb-1">Hi, <%= user.username %>!</h3>
          <small class="text-muted">Browse coaches and book training sessions.</small>
        </div>
      </div>
    </div>

    <%- include('partials/flashMessages', { messages }) %>

    <form class="row g-2 align-items-center mb-3" method="GET" action="/listingsBrowse">
      <div class="col-12 col-sm-8 col-md-6">
        <input
          type="text"
          name="search"
          class="form-control"
          placeholder="Search sports, levels, or locations"
          value="<%= search || '' %>">
      </div>
      <div class="col-12 col-sm-4 col-md-3 d-flex gap-2">
        <button class="btn btn-primary flex-grow-1" type="submit">Search</button>
        <a class="btn btn-outline-secondary" href="/listingsBrowse">Reset</a>
      </div>
    </form>

    <% if (!products || !products.length) { %>
      <div class="alert alert-info">No listings found<%= search ? ' for "' + search + '"' : '' %>.</div>
    <% } else { %>
    <div class="row g-3">
      <% products.forEach(p => {
        const outOfStock = p.available_slots <= 0;
      %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="product-card h-100 d-flex flex-column bg-white">
            <img src="/images/<%= p.image || 'placeholder.png' %>" class="card-img-top product-img" alt="<%= p.listing_title %>">
            <div class="card-body d-flex flex-column">
              <h6 class="fw-semibold mb-1"><a href="/listingDetail/<%= p.id %>" class="text-decoration-none text-dark"><%= p.listing_title %></a></h6>
              <div class="small text-muted mb-2"><%= p.username %></div>
              <% if (p.description) { %>
                <p class="small text-muted mb-2"><%= p.description %></p>
              <% } %>
              <p class="small mb-2">
                <% if (p.skill_level) { %>
                  <span class="badge bg-secondary text-uppercase"><%= p.skill_level %></span>
                <% } %>
                <% if (p.duration_minutes) { %>
                  <span class="text-muted"> - <%= p.duration_minutes %> mins</span>
                <% } %>
              </p>
              <% if (p.session_location) { %>
                <div class="small text-muted mb-2">Location: <%= p.session_location %></div>
              <% } %>
              <div class="mt-auto">
                <form class="d-flex align-items-center gap-2" action="/listingsBrowse/add-to-cart/<%= p.id %>" method="POST">
                  <input type="hidden" name="quantity" value="1">
                  <button type="submit" class="btn btn-primary flex-grow-1" <%= outOfStock ? 'disabled' : '' %>>Add to booking cart</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <% } %>
  </div>
<%- include('partials/footer') %>



