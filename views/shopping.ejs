<%- include('partials/head', {
  title: 'Supermarket App',
  extraHead: `<style>
    body { background: #f7f7f9; }
    .welcome-card {
      background: linear-gradient(135deg, #f9fafb, #eef2ff);
      border: 1px solid #e5e7eb;
      border-radius: 18px;
    }
    .product-card {
      border: 1px solid #e5e7eb;
      border-radius: 14px;
      box-shadow: 0 4px 18px rgba(0, 0, 0, 0.04);
      transition: transform 0.1s ease, box-shadow 0.1s ease;
    }
    .product-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }
    .product-img {
      height: 180px;
      object-fit: contain;
      padding: 12px;
    }
    .qty-btn {
      width: 44px;
      height: 44px;
      border-radius: 50%;
    }
    .qty-display {
      min-width: 48px;
      text-align: center;
      font-weight: 600;
    }
  </style>`
}) %>
<%- include('partials/navbar', { user, activePage: 'shopping' }) %>

  <div class="container py-4">
    <div class="welcome-card p-4 mb-4">
      <div class="d-flex flex-wrap justify-content-between align-items-center">
        <div>
          <p class="mb-1 text-muted">Welcome back</p>
          <h3 class="mb-1">Hi, <%= user.username %>!</h3>
          <small class="text-muted">Browse groceries and add them to your cart.</small>
        </div>
      </div>
    </div>

    <%- include('partials/flashMessages', { messages }) %>

    <form class="row g-2 align-items-center mb-3" method="GET" action="/shopping">
      <div class="col-12 col-sm-8 col-md-6">
        <input
          type="text"
          name="search"
          class="form-control"
          placeholder="Search products"
          value="<%= search || '' %>">
      </div>
      <div class="col-12 col-sm-4 col-md-3 d-flex gap-2">
        <button class="btn btn-primary flex-grow-1" type="submit">Search</button>
        <a class="btn btn-outline-secondary" href="/shopping">Reset</a>
      </div>
    </form>

    <% if (!products || !products.length) { %>
      <div class="alert alert-info">No products found<%= search ? ' for "' + search + '"' : '' %>.</div>
    <% } else { %>
    <div class="row g-3">
      <% products.forEach(p => {
        const priceNum = Number(p.price || 0);
        const discountPercentage = Math.min(100, Math.max(0, Number(p.discountPercentage) || 0));
        const hasDiscount = discountPercentage > 0;
        const discountedPrice = hasDiscount
          ? Number((priceNum * (1 - discountPercentage / 100)).toFixed(2))
          : priceNum;
        const outOfStock = p.quantity <= 0;
      %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="product-card h-100 d-flex flex-column bg-white">
            <img src="/images/<%= p.image %>" class="card-img-top product-img" alt="<%= p.productName %>">
            <div class="card-body d-flex flex-column">
              <h6 class="fw-semibold mb-1"><a href="/products/<%= p.id %>" class="text-decoration-none text-dark"><%= p.productName %></a></h6>
              <p class="mb-2">
                <% if (hasDiscount) { %>
                  <span class="text-decoration-line-through text-muted me-2">$<%= priceNum.toFixed(2) %></span>
                  <span class="fw-semibold text-success">$<%= discountedPrice.toFixed(2) %></span>
                <% } else { %>
                  <span class="fw-semibold text-dark">$<%= priceNum.toFixed(2) %></span>
                <% } %>
              </p>
              <% if (hasDiscount) { %>
                <div class="d-flex gap-2 align-items-center mb-2">
                  <span class="badge bg-danger">-<%= discountPercentage.toFixed(0) %>%</span>
                  <small class="text-muted">New amount $<%= discountedPrice.toFixed(2) %></small>
                </div>
              <% } %>
              <% if (p.offerMessage) { %>
                <div class="text-info small mb-2">
                  <strong>Offer:</strong> <%= p.offerMessage %>
                </div>
              <% } %>
              <p class="<%= outOfStock ? 'text-danger' : 'text-muted' %> mb-2">
                <%= outOfStock ? 'Out of stock' : 'Stock: ' + p.quantity %>
              </p>
              <div class="mt-auto">
                <form class="d-flex align-items-center gap-2" action="/add-to-cart/<%= p.id %>" method="POST">
                  <div class="d-flex align-items-center gap-2">
                    <button type="button" class="btn btn-outline-primary qty-btn quantity-btn" data-dir="down" <%= outOfStock ? 'disabled' : '' %>>-</button>
                    <div class="qty-display">0</div>
                    <button type="button" class="btn btn-primary qty-btn quantity-btn" data-dir="up" <%= outOfStock ? 'disabled' : '' %>>+</button>
                  </div>
                  <input type="hidden" name="quantity" value="0" class="quantity-input">
                  <button type="submit" class="btn btn-primary flex-grow-1" <%= outOfStock ? 'disabled' : '' %>>Add to cart</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <% } %>
  </div>
<%- include('partials/footer', { extraScripts: `<script>
    document.querySelectorAll('.product-card').forEach(card => {
      const input = card.querySelector('.quantity-input');
      const display = card.querySelector('.qty-display');
      card.querySelectorAll('.quantity-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const dir = btn.dataset.dir;
          let current = parseInt(input.value, 10);
          if (!Number.isFinite(current)) current = 0;
          current = dir === 'up' ? current + 1 : Math.max(0, current - 1);
          input.value = current;
          display.textContent = current;
        });
      });
    });
  </script>` }) %>
