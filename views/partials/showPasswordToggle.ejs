<script>
  (function () {
    document.querySelectorAll('[data-show-password-target]').forEach((checkbox) => {
      const targetSelector = checkbox.dataset.showPasswordTarget;
      if (!targetSelector) return;
      const targets = document.querySelectorAll(targetSelector);
      checkbox.addEventListener('change', () => {
        const type = checkbox.checked ? 'text' : 'password';
        targets.forEach((input) => {
          if (input && input.type) input.type = type;
        });
      });
    });
  })();
</script>