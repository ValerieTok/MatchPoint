<aside class="sidebar">
  <div class="brand">
    <div class="brand__dot"><i class="fa-solid fa-dumbbell"></i></div>
    <span class="brand__name">MatchPoint</span>
  </div>

  <nav class="nav">
    <a class="nav__item <%= active === 'profile' ? 'nav__item--active' : '' %>" href="/coachProfile">
      <i class="fa-regular fa-user"></i>
      <span>Profile</span>
    </a>

    <a class="nav__item <%= active === 'listings' ? 'nav__item--active' : '' %>" href="/listingsManage">
      <i class="fa-solid fa-layer-group"></i>
      <span>Listings</span>
      <% if (typeof listingCount !== "undefined") { %>
        <span class="nav__badge"><%= listingCount %></span>
      <% } %>
    </a>

    <a class="nav__item <%= active === 'bookings' ? 'nav__item--active' : '' %>" href="/bookingsManage">
      <i class="fa-solid fa-calendar-check"></i>
      <span>Bookings</span>
    </a>

    <a class="nav__item <%= active === 'ratings' ? 'nav__item--active' : '' %>" href="/coachRatings">
      <i class="fa-regular fa-star"></i>
      <span>Ratings</span>
    </a>

    <a class="nav__item <%= active === 'revenue' ? 'nav__item--active' : '' %>" href="/trackRevenue">
      <i class="fa-solid fa-dollar-sign"></i>
      <span>Track Revenue</span>
    </a>

    <a class="nav__item <%= active === 'security' ? 'nav__item--active' : '' %>" href="/2FASetup">
      <i class="fa-solid fa-shield-halved"></i>
      <span>Security / 2FA</span>
    </a>

  </nav>

  <div class="sidebar__inbox">
    <div class="sidebar__section-title">
      <span>Inbox</span>
      <i class="fa-solid fa-inbox"></i>
    </div>
    <div class="inbox">
      <% const inboxRows = Array.isArray(inboxItems) ? inboxItems : []; %>
      <% if (!inboxRows.length) { %>
        <div class="inbox__empty">No messages yet.</div>
      <% } else { %>
        <% inboxRows.forEach((item) => { %>
          <div class="inbox__item">
            <div class="inbox__title"><%= item.title %></div>
            <% if (item.body) { %>
              <div class="inbox__body"><%= item.body %></div>
            <% } %>
            <div class="inbox__meta">
              <span class="inbox__time"><%= item.when %></span>
              <span class="inbox__pill inbox__pill--<%= item.status %>"><%= item.statusLabel %></span>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <div class="sidebar__footer">
    <form action="/logout" method="post">
      <button class="logout" type="submit">
        <i class="fa-solid fa-right-from-bracket"></i>
        Logout
      </button>
    </form>
  </div>
</aside>
