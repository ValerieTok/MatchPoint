<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>All Orders</title>
</head>
<body class="bg-light">
  <%- include('partials/navbar', { user, activePage: 'orders' }) %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <p class="text-muted mb-1">Admin</p>
        <h3 class="mb-0">All Orders</h3>
      </div>
      <button class="btn btn-outline-secondary" onclick="window.print()">Print page</button>
    </div>

    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>

    <% if (!orders || !orders.length) { %>
      <div class="alert alert-info">No orders found.</div>
    <% } else { %>
      <div class="accordion" id="orders-accordion">
        <% orders.forEach((o, idx) => { %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="heading-<%= o.id %>">
              <button class="accordion-button <%= idx ? 'collapsed' : '' %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= o.id %>">
                  <div class="w-100 d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">Order #<%= o.id %> &middot; <%= o.username %></div>
                      <div class="text-muted small"><%= new Date(o.created_at).toLocaleString() %></div>
                    </div>
                    <div class="text-end">
                      <div class="fw-semibold">$<%= Number(o.total || 0).toFixed(2) %></div>
                      <div class="text-muted small"><%= o.address || 'No address' %></div>
                      <% if (o.review) { %>
                        <div class="text-warning small">
                          <% for (let i = 0; i < o.review.rating; i++) { %>&#9733;<% } %>
                          <% for (let i = o.review.rating; i < 5; i++) { %>&#9734;<% } %>
                        </div>
                      <% } %>
                    </div>
                  </div>
              </button>
            </h2>
            <div id="collapse-<%= o.id %>" class="accordion-collapse collapse <%= idx ? '' : 'show' %>" data-bs-parent="#orders-accordion">
              <div class="accordion-body">
                <div class="d-flex justify-content-end mb-2">
                  <button class="btn btn-sm btn-outline-secondary" type="button" onclick="printOrder('order-admin-<%= o.id %>', 'Order #<%= o.id %>')">Print this order</button>
                </div>
                <div id="order-admin-<%= o.id %>">
                <% if (!o.items || !o.items.length) { %>
                  <div class="alert alert-light mb-0">No items recorded.</div>
                <% } else { %>
                  <div class="table-responsive">
                    <table class="table align-middle">
                      <thead>
                        <tr>
                          <th>Item</th>
                          <th class="text-center">Image</th>
                          <th class="text-end">Qty</th>
                          <th class="text-end">Price</th>
                          <th class="text-end">Subtotal</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% o.items.forEach(it => {
                          const price = Number(it.price || 0);
                          const qty = Number(it.quantity || 0);
                          const listPrice = Number(it.listPrice || price);
                          const discountPercentage = Number(it.discountPercentage || 0);
                          const hasDiscount = discountPercentage > 0 && listPrice > price;
                          const subtotal = price * qty;
                          const imageSrc = it.image ? '/images/' + it.image : null;
                        %>
                          <tr>
                            <td>
                              <div class="fw-semibold"><%= it.productName %></div>
                              <% if (it.offerMessage) { %>
                                <div class="text-info small"><%= it.offerMessage %></div>
                              <% } %>
                            </td>
                            <td class="text-center">
                              <% if (imageSrc) { %>
                                <img src="<%= imageSrc %>" alt="<%= it.productName %>" class="d-block mx-auto" style="max-height:70px;">
                              <% } else { %>
                                <span class="text-muted small">No image</span>
                              <% } %>
                            </td>
                            <td class="text-end"><%= qty %></td>
                            <td class="text-end">
                              <div class="text-muted small">Unit</div>
                              <% if (hasDiscount) { %>
                                <div class="text-decoration-line-through text-muted small">$<%= listPrice.toFixed(2) %></div>
                              <% } %>
                              <div class="fw-semibold">$<%= price.toFixed(2) %></div>
                              <% if (discountPercentage > 0) { %>
                                <div class="text-success small">-<%= discountPercentage.toFixed(0) %>% off (new amount)</div>
                              <% } else { %>
                                <div class="text-muted small">Current price</div>
                              <% } %>
                            </td>
                            <td class="text-end">
                              <div class="fw-semibold">$<%= subtotal.toFixed(2) %></div>
                              <% if (hasDiscount) { %>
                                <div class="text-success small">Discount applied</div>
                              <% } %>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                <% } %>
                <div class="mt-3">
                  <% if (o.delivered_at) { %>
                    <div class="alert alert-success py-2">
                      Delivered at <strong><%= new Date(o.delivered_at).toLocaleString() %></strong>
                    </div>
                  <% } else { %>
                    <div class="alert alert-secondary py-2">
                      Not yet confirmed delivered.
                    </div>
                  <% } %>
                <% if (o.review) { %>
                  <div class="border rounded-3 p-3 bg-light">
                    <div class="fw-semibold mb-1">Customer review</div>
                    <div class="text-warning mb-1">
                      <% for (let i = 0; i < o.review.rating; i++) { %>&#9733;<% } %>
                      <% for (let i = o.review.rating; i < 5; i++) { %>&#9734;<% } %>
                    </div>
                    <p class="mb-0 text-muted"><%= o.review.comment || 'No comment provided.' %></p>
                    <form class="mt-2" action="/orders/<%= o.id %>/review/delete" method="post">
                      <button class="btn btn-outline-danger btn-sm" type="submit">Delete review</button>
                    </form>
                  </div>
                <% } else { %>
                  <div class="text-muted small mt-2">No review submitted yet.</div>
                  <% } %>
                </div>
              </div>
            </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
  <script>
    function printOrder(elementId, title) {
      var el = document.getElementById(elementId);
      if (!el) return;
      var iframe = document.createElement('iframe');
      iframe.style.position = 'fixed';
      iframe.style.right = '0';
      iframe.style.bottom = '0';
      iframe.style.width = '0';
      iframe.style.height = '0';
      iframe.style.border = '0';
      document.body.appendChild(iframe);
      var doc = iframe.contentWindow.document;
      doc.open();
      doc.write('<html><head><title>' + (title || 'Order') + '</title>');
      doc.write('<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">');
      doc.write('</head><body class="p-3">');
      doc.write(el.innerHTML);
      doc.write('</body></html>');
      doc.close();
      iframe.contentWindow.focus();
      iframe.contentWindow.print();
      setTimeout(function () {
        document.body.removeChild(iframe);
      }, 1000);
    }
  </script>
</body>
</html>
